ma#!/bin/bash
sudo find /var/log/ -type f -name "*.gz" -exec "deleting: {}" \; -exec /bin/rm -f '{}' \;
sudo find . -type f -regextype posix-extended -regex ".*\.[0-9]+$" -exec "deleting: {}" \; -exec /bin/rm -f '{}' \;
sudo find /var/log/ -type f -name "*.old"  -exec "deleting: {}" \; -exec /bin/rm -f '{}' \;
sudo find . -type f -regextype posix-extended -regex ".*/postgresql-[0-9]{4}-[0-9]{2}-[0-9]{2}_[0-9]{6}.log$" -exec "deleting: {}" \; -exec /bin/rm -f '{}' \;
